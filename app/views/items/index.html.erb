<div class="">
  <% @items.each do |item| %>
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-3">
          <% attachment = item.attachments&.first %>
          <% if attachment %>
            <%= image_tag(attachment['thumbnails']['large']['url'], class: 'img-fluid') %>
          <% end %>
        </div>
        <div class="col-9">
          <div>
            <%= link_to item.name, item_path(item.id) %>
          </div>
          <p>
            <%= item.note %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
